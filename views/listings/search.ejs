<% layout("/layouts/boilerplate") %>
<body>
    
  <h3>All listings in <%=query %></h3>
    <div class="row row-col-lg-3 row-col-md-2 row-col-sm-1">
        <% for(let listing of listings) {%>
            <a href="/listings/<%=listing._id%>" class="card listing-link">
            <div class=" card">
                <img class="card-img-top" style="height: 20rem;" src="<%=listing.image.url%>" alt="listing_image">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                  <b> <%= listing.title  %></b>
                    <br>
                    &#8377; <%= listing.price.toLocaleString("en-IN") %> / night 
                    <i class="tax-info"> &nbsp; &nbsp; + 18% GST</i>
        
                  </p>
                </div>
              </div>
            </a>
    
          <% } %>

    </div>
    